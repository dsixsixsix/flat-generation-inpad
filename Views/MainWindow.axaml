<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:InpadProject.Views"
        xmlns:viewmodels="using:InpadProject.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="InpadProject.Views.MainWindow"
        x:DataType="viewmodels:MainWindowViewModel"
        Title="INPAD Project Visual"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Верхняя панель с кнопками и статистикой -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Content="Сгенерировать новое здание" 
                    Command="{Binding GenerateNewBuildingCommand}"
                    Padding="10,5"/>
            <TextBlock Text="{Binding ApartmentStatistics}" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Основная область с планами этажей -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Building.Floors}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="5">
                            <StackPanel>
                                <TextBlock Text="{Binding FloorNumber, StringFormat='Этаж {0}'}"
                                         HorizontalAlignment="Center"
                                         Margin="0,5"/>
                                <views:FloorPlanControl Floor="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Легенда -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Spacing="20">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#e89ac7" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="Студия" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#fff36a" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="1к" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#a6e97a" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="2к" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#7ac6f9" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="3к" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#888888" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="ЛЛУ" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#444444" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="Коридор" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Border Width="24" Height="24" Background="#ffffff" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="Пустой" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 